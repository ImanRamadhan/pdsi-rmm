    function getIndex() {
        $.ajax({
            url: "@Url.Action("PermintaanPekerjaanList", "PermintaanPekerjaan")",
            type: "GET",
            datatype: "json",
            success: function (result, x, z) {
                grid.clear();
                grid.rows.add(result);
                grid.draw();
            }
        });
    }

    function createPermintaanPekerjaan() {
        if ($('#myform').valid()) {
            var full = location.protocol + '//' + /:\/\/([^\/]+)/.exec(window.location.href)[1] + '~/Master/CreateTransporter';
            var DataPost = {
                no_wo: $('#txtmodalnowo').val(),
                no_activity: $('#txtmodalnoact').val(),
                judul_pekerjaan: $('#txtmodaljudul').val(),
                lokasi_asal: $('#txtlokasiasal').val(),
                cp_lokasi_asal: $('#cplokasiasal').val(),
                lokasi_tujuan: $('#txtlokasitujuan').val(),
                cp_lokasi_tujuan: $('#txtcplokasitujuan').val(),
                detail_barang: $('#txtmodaldetailbarang').val(),
                keterangan: $('#txtmodalketerangan').val(),

            }
            $.ajax({
                type: "post",
                url: '@Url.Action("CreatePermintaanPekerjaan" ,"PermintaanPekerjaan")',
                data: DataPost,
                success: function (Result) {
                    if (Result != "") {
                        $.ajax({
                            success: function (Result) {
                                $("#grid").DataTable().ajax.reload();
                                clearForm();
                                $.notify({
                                    message: 'Success Adding Data...'
                                }, {
                                    type: 'success'
                                });

                            },
                            error: function (event, textStatus, errorThrown) {
                                $.notify({
                                    title: 'Failed!',
                                    message: event.responseText + event.status
                                }, {
                                    type: 'danger'
                                });
                            }
                        })
                    } else {

                    }
                },
                error: function (event, textStatus, errorThrown) {
                    alert("Message : Javasript or your connection is disabled or not connected ");
                }
            });
            $('#myModal').modal('hide');
        }
    }

    function updateTransporter() {
        if ($('#myform').valid()) {
            var full = location.protocol + '//' + /:\/\/([^\/]+)/.exec(window.location.href)[1] + '~/Master/CreateTransporter';
            var DataPost = {
                id: $('#id').val(),
                name: $('#txtTranspoter').val(),
            }
            $.ajax({
                type: "post",
                url: '@Url.Action("EditTransporter" ,"Master")',
                data: DataPost,
                success: function (Result) {
                    if (Result != "") {
                        $.ajax({
                            success: function (Result) {
                                $("#grid").DataTable().ajax.reload();
                                clearForm();
                                $.notify({
                                    message: 'Success Edited Data...'
                                }, {
                                    type: 'success'
                                });
                            },
                            error: function (event, textStatus, errorThrown) {
                                $.notify({
                                    title: 'Failed!',
                                    message: event.responseText + event.status
                                }, {
                                    type: 'danger'
                                });
                            }
                        })
                    } else {

                    }
                },

            });
            $('#myModal').modal('hide');
        }
    }

    function editTransporter(ID) {
         
        var getData = {
            id: ID
        }
        $.ajax({
            data: getData,
            url: '@Url.Action("GetEdit", "Master")',
            type: 'POST',
            success: function (Result) {
                if (Result != "") {
                    var dataParse = JSON.parse(Result);
                    $('#txtTranspoter').val(dataParse[0].name);
                    $('#id').val(ID);
                }
            }
        });
        $('#btnSubmitTransporter').hide();
        $('#btnUpdateTransporter').show();
        $('#myModal').modal('show');
        $('.modal-title').text('Edit Data');
    }

    function deleteTransporter(ID) {
         
        if (confirm("Are you sure you want to delete this data?")) {
            var delData = {
                id: ID
            }
            $.ajax({
                data: delData,
                url: '@Url.Action("DeleteTransporter", "Master")',
                type: 'POST',
                success: function (Result) {
                    $("#grid").DataTable().ajax.reload();
                    $.notify({
                        message: 'Success Deleted Data...'
                    }, {
                        type: 'success'
                    });
                }
            });
        }
        return false;
    }

    function clearForm() {
        $('#id').val("");
        $('#txtTranspoter').val("");
    }

    function editKemasan(Id) {
        $.ajax({
            method: "GET",
            url: routePath + "odata/PengeluaranKemasanOdata(" + Id + ")"
        }).done(function (msg) {
            $('#txtPengeluaranKemasanId').val(msg.Id);
            $('#txtMerkKemasan').val(msg.Merk);
            $('#txtJumlahKemasan').val(msg.Jumlah);
            $('#ddlJnsKemasan').val(msg.JenisKemasanId).trigger("change");

            $('#btnSaveKemasan').hide();
            $('#btnUpdateKemasan').show();
        })
    }


    function Validation() {

    if (!$("#txttglpekerjaansrcstart").val()) {
        $("#txttglpekerjaansrcstart").focus();
        return false;
    }
    if (!$("#txttglpekerjaansrcend").val()) {
        $("#txttglpekerjaansrcend").focus();
        alert("All field must be filled");
        return false;
    }

    return true;
}
