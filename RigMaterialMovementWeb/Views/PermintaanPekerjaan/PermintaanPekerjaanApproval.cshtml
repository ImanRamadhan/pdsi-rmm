    function OpenModal() {
         
        $.ajax({
            url: '@Url.Action("GetModalData", "PermintaanPekerjaan")',
            type: 'GET',
            success: function (Result) {
                if (Result != "") {
                    var dataParse = JSON.parse(Result);
                    $('#txtmodalnowo').val(dataParse[0].no_wo);
                    $('#txtmodalnoact').val(dataParse[0].no_activity);
                }
            }
        });
        $('#txtmodalnowo').prop('readonly', true);
        $('#txtmodalnoact').prop('readonly', true);
        $('#btnSubmitpp').show();
        $('#btnUpdatepp').hide();
        $('#myModal').modal('show');
        $('.modal-title').text('Add Data');
    }

    function FilterPermintaanPekerjaan() {
        if (Validation()) {
             
            var getData = {
                no_wo: $('#txtwosrc').val(),
                no_activity: $('#txtactivitysrc').val(),
                judul_pekerjaan: $('#txtjudulsrc').val(),
                lokasi_asal: $('#txtlokasiasalsrc').val(),
                lokasi_tujuan: $('#txtlokasitujuansrc').val(),
                tanggal_pekerjaandari: $('#txttglpekerjaansrcstart').val(),
                tanggal_pekerjaansampai: $('#txttglpekerjaansrcend').val(),
